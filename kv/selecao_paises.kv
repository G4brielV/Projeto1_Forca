<SelecaoPaises>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#699cfa")
            Rectangle:
                size: self.size
                pos: self.pos

        ImageButton:
            pos_hint: {"right" : 0.9, "top" : 0.98}
            size_hint: 0.08, 0.08
            id: reiniciar_selecao_paises
            source: "fotos/reiniciar.png"
            on_release: app.mudar_tela("home_page"), app.forca.__init__()

        ImageButton:
            pos_hint: {"right" : 1, "top" : 0.98}
            size_hint: 0.1, 0.1
            id: sair_selecao_paises
            source: "fotos/sair.png"
            on_release: app.get_running_app().stop()

        Label:
            pos_hint: {"right" : 0.8, "top" : 0.97}
            size_hint: 0.6, 0.2
            font_size: 20
            bold: True
            text: "SELECIONE O CONTINENTE "

        Button:
            pos_hint: {"right" : 0.8, "top" : 0.83}
            size_hint: 0.6, 0.1
            text: "TODOS OS CONTINENTES"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais()
            background_normal: ''
            background_color: utils.get_color_from_hex("#5d6a80")

        RoundedButton:
            pos_hint: {"right" : 0.8, "top" : 0.65}
            size_hint: 0.6, 0.1
            text: "AMÉRICAS"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais("Americas")


        RoundedButton:
            pos_hint: {"right" : 0.8, "top" : 0.53}
            size_hint: 0.6, 0.1
            text: "ÁFRICA"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais("Africa")

        RoundedButton:
            pos_hint: {"right" : 0.8, "top" : 0.41}
            size_hint: 0.6, 0.1
            text: "ÁSIA"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais("Asia")

        RoundedButton:
            pos_hint: {"right" : 0.8, "top" : 0.29}
            size_hint: 0.6, 0.1
            text: "EUROPA"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais("Europa")

        RoundedButton:
            pos_hint: {"right" : 0.8, "top" : 0.17}
            size_hint: 0.6, 0.1
            text: "OCEANIA"
            on_release: app.mudar_tela("jogo"), app.forca.achar_pais("Oceania")


