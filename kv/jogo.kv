<Jogo>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#699cfa")
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            pos_hint: {"right" : 1, "top" : 1}
            size_hint: 1, 0.55
            id:img_forca
            source: "fotos/forca.png"

        Label:
            pos_hint: {"right" : 1, "top" : 0.9}
            size_hint: 0.6, 0.2
            text: "LETRAS USADAS"
            bold: True

        Label:
            pos_hint: {"right" : 1, "top" : 0.8}
            size_hint: 0.6, 0.2
            id: letras_usadas
            text: ""
            bold: True

        Label:
            pos_hint: {"right" : 0.5, "top" : 0.9}
            size_hint: 0.6, 0.2
            id: aviso
            text: ""
            bold: True

        Label:
            pos_hint: {"right" : 0.8, "top" : 0.5}
            size_hint: 0.6, 0.2
            id: espaco_letras
            text: ""
            bold: True

        TextInput:
            pos_hint: {"right" : 0.6, "top" : 0.3}
            size_hint: 0.2, 0.1
            id: chute
            hint_text: "Digite uma letra"
            multiline:False
            write_tab: False


        Button:
            pos_hint: {"right" : 0.8, "top" : 0.2}
            size_hint: 0.6, 0.1
            text: "Tentar Letra"
            on_release: app.forca.game(chute.text)