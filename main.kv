#:include kv/home_page.kv
#:include kv/selecao_paises.kv
#:include kv/jogo.kv
#:include kv/final.kv
#:import utils kivy.utils

GridLayout:
    rows: 1
    ScreenManager:
        id: screen_manager
        HomePage:
            name: "home_page"
            id: home_page
        SelecaoPaises:
            name: "selecao_paises"
            id: selecao_paises
        Jogo:
            name: "jogo"
            id: jogo
        Final:
            name: "final"
            id: final


<RoundedButton@Button>
    background_color: (0,0,0,0)
    backgroud_normal: ''
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]